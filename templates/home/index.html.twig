{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}

    <style>
        {# body { background-color : gold;} #}
    </style>

{% endblock %}

{% block body %}
    <h1> {{ name }}</h1>
    
    {% if myage >= 25 %}
        <h2 style="color:red;">l'age = {{ myage }}</h2>
    {% elseif myage == 22 %}
        <h4 style="color:green;">l'age = {{ myage }}</h4>
    {% else %}
        <h6 style="color:purple;">l'age = {{ myage }}</h6>
    {% endif %}
    
    <div class="row mx-3">
        {% for prenom, age in myPrenoms %}
            <div class="col-md-4 my-3">
            <div class="card">
                    {% if loop.first %}
                        <h1 style="color:purple;">la 1ère</h1>
                    {% elseif loop.last %}
                        <h1 style="color:green;">la dernière</h1>
                    {% endif %}
                
                    <h1>{{ loop.index }} / {{loop.length}} - Prénom : {{ prenom }}</h1>
                    <h3>Age : {{ age }} ans </h3>
                </div>
            </div>
        {% endfor %}
    </div>
    <ul>
        {% for compteur in 0..10 %}
            <li>{{ compteur }}</li>
        {% endfor %}
    </ul>
    {% set nom = "Naert" %}
    <h1>Bonjour {{nom}}</h1>

    <a href="{{ path('app_test')}}" class="btn btn-primary my-3 mx-3">La page test</a>
{% endblock %}
{% block Sebastien %}
    <h2>Contenu du block Sebastien du controller: {{controller_name}}</h2>
{% endblock %}

